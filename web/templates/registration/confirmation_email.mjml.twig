{% extends "email_base.mjml.twig" %}

{% block content %}
    <mj-section>
        <mj-column>
            <mj-text font-size="20px" font-weight="900" align="center">
                Finaliser votre inscription
            </mj-text>
            <mj-text font-size="15px">
                Pour finaliser votre inscription veuillez cliquez sur le lien ci-dessous.
            </mj-text>
            <mj-text font-style="italic">Ce lien expira dans {{ expiresAtMessageKey|trans(expiresAtMessageData, 'VerifyEmailBundle') }}</mj-text>
            <mj-button href="{{ signedUrl|raw }}" color="#fff" background-color="#830211" vertical-align="middle" font-size="16px">
                Confirmer mon inscription
            </mj-button>
        </mj-column>
    </mj-section>
{% endblock %}