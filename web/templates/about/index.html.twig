{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('about_page') }}
    <script type="application/ld+json">
    {
        "@context":"https://schema.org",
        "@type":"AboutPage",
        "@id": "{{ url(app.request.attributes.get("_route"), app.request.attributes.get("_route_params")) }}"
        "name": "A propos",
        "description": "Nous sommes une équipe de passionés d'échecs qui souhaite partagez sa passion avec le plus grand nombre"
    }
    </script>
{% endblock %}

{% block stylesheets %}
